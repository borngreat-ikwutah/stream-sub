VITE_MANTLE_TESTNET_RPC_URL=https://rpc.sepolia.mantle.xyz
VITE_MANTLE_MAINNET_RPC_URL=https://rpc.mantle.xyz

# Contract Addresses (set after deployment)
VITE_CONTRACT_ADDRESS_TESTNET=0x0000000000000000000000000000000000000000
